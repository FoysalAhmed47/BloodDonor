<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="#673AB7"
    android:gravity="center"
    tools:context="com.example.databasesqlite139.MainActivity">


    <LinearLayout
        android:gravity="center"
        android:paddingLeft="5dp"
        android:orientation="vertical"
        android:background="#2196F3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText

            android:hint="Enter Name+(BloodGroup)"
            android:id="@+id/nameEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="10dp"
            android:hint="Enter Current Location"
            android:id="@+id/locationEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="10dp"
            android:hint="Enter Contact Number"
            android:id="@+id/contractEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/saveButtonId"
            android:text="Save Details"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#141414"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            />

        <Button
            android:id="@+id/showButtonId"
            android:text="All DonorList"
            android:textAllCaps="false"
            android:background="@drawable/rund_button"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#15DDCA"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/updateButtonId"
            android:text="Update Details"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="#121213"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/update_button"
            />

        <Button
            android:id="@+id/deleteButtonId"
            android:text="Delete Details"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#86E41A"
            android:background="@drawable/delete_button"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:paddingRight="5dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/aaaaa"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />



    </LinearLayout>


</LinearLayout>